<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:d="http://www.curamsoftware.com/BaseDomains">
  <xs:import namespace="http://www.curamsoftware.com/BaseDomains"/>
  <xs:include schemaLocation="IEGDomains"/>

  <xs:element name="Application">
    <xs:complexType>
      <xs:sequence minOccurs="0">
        <xs:element ref="Person" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

   <xs:element name="Person">
    <xs:complexType>
      <xs:attribute name="personID" type="d:SVR_KEY"/>
      <xs:attribute name="firstName" type="IEG_STRING"/>
      <xs:attribute name="gender" type="IEG_GENDER"/>
      <xs:attribute name="dateOfBirth" type="IEG_DATE"/>
      <xs:attribute name="roleID" type="IEG_INT64"/>
      <xs:attribute name="participantID" type="IEG_INT64"/>
      <xs:attribute name="questionsApplicableInd" type="IEG_BOOLEAN"/>

      <!-- Group  1 Health and Safety-->
      <xs:attribute name="hasCleanTidyHome" type="IEG_YES_NO"/>
      <xs:attribute name="sufferFromPressureSores" type="IEG_YES_NO"/>
      <xs:attribute name="canManageFinances" type="IEG_YES_NO"/>
      <xs:attribute name="placeIndividualOrOthersAtRisk" type="IEG_YES_NO"/>
      <xs:attribute name="displayDangerousBehaviourToOthers" type="IEG_YES_NO"/>

      <!-- Group  2 Daily Routine-->
      <xs:attribute name="canWashSelf" type="IEG_YES_NO"/>
      <xs:attribute name="canFeedSelf" type="IEG_YES_NO"/>
      <xs:attribute name="canGetMedicineFoodHouseholdItems" type="IEG_YES_NO"/>
      <xs:attribute name="requiresAssistanceToToilet" type="IEG_YES_NO"/>
      <xs:attribute name="canWalkLongDistances" type="IEG_YES_NO"/>

    </xs:complexType>
    <xs:key name="Person_Key">
      <xs:selector xpath="./Person"/>
      <xs:field xpath="@personID"/>
    </xs:key>
  </xs:element>
</xs:schema>