    extends="UserRole"
    extendsRuleSet="CoreAdvisorRuleSet"
    name="SuperUserRole"
  >
    <Attribute name="roleName">
      <type>
        <javaclass name="String"/>
      </type>
      <derivation>
        <String value="SUPERROLE"/>
      </derivation>
    </Attribute>
  </Class>     -->

</RuleSet>